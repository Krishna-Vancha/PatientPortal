@model PatientPortal.Models.DomainModels.Appointment
@{
    ViewData["Title"]="Delete Appointment";
}
<h1> @ViewData["Title"] for @Model.Patient.FullName</h1>
<h4> Are sure Do you want to delete the Appointment</h4>
<dl class="row">
    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.AppointmentDate.ToShortDateString()</dd>
    <dt class="col-sm-2">Doctor</dt>
    <dd class="col-sm-10">@Model.DoctorName</dd>
    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="List" asp-route-id="@Model.PatientId" class="btn btn-secondary">Cancel</a>
</form>