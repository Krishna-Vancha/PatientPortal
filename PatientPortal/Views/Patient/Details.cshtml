@model PatientPortal.Models.DomainModels.Patient
@{
    ViewData["Title"] = "Patient Details";
}
<h2>@Model.FullName's Profile</h2>
<section>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
    <p><strong>Gender:</strong> @Model.Gender</p>
    <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>
    <p><strong>Address:</strong> @Model.Address</p>
</section>
<hr />
<h3>Appointments</h3>
<p>
    <a asp-controller="Appointment" asp-action="List" asp-route-id="@Model.Id" class="btn btn-info mt-3">View Appointments</a>
</p>
<p>
    <a asp-controller="Patient"  asp-action="List">Back to Patient List</a>
</p>
